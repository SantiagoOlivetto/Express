<div class='login-container'>
  <h1>Log in</h1>
  <form action='/login' method='POST'>
    <input id='email' name='email' type='email' class='custom-input' placeholder='E-mail' required='true' />
    <input id='password' name='password' type='password' class='custom-input' placeholder='Password' required='true' />
    {{#if msg}}
      <p style='color: red;'>Email or password incorrect</p>
    {{/if}}
    <input class='button' type='submit' value='Log in!' />
    <a href='{{url}}signup'>Don't have an account yet?</a>
    <a href='{{url}}session/github'>Or you can sign up with Git Hub</a>
  </form>
</div>