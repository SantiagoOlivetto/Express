{{#if name}}
  <div>
    <span>{{name}}</span>
    <span>{{role}}</span>
    <a href='/logout'>Logout</a>
  </div>
{{/if}}
<div>
  {{#if title}}
    <h1 class='listTitle'>{{title}}</h1>
  {{else}}
    <h1>Unknown Title</h1>
  {{/if}}
  <div class='cardList'>
    {{#each products.productsColl}}
      <div class='card'>
        <h3 class='productTitle'>{{this.title}}</h3>
        <ul style='list-style: none;'>
          <li class='productDescription'>{{this.description}}</li>
          <li class='productPrice'>{{this.price}}$</li>
        </ul>
        <div class='addToCart'>
          <button class='addToCart-btn' data-product-id='{{this._id}}'>Check it!</button>
        </div>
      </div>
    {{/each}}
  </div>

</div>
<div id='pagination' class='pagination'>
  {{#if products.prodPag.hasPrevPage}}
    <a href={{products.prodPag.prevLink}}><ion-icon name='chevron-back-outline'></ion-icon></a>
  {{/if}}
  <select name='pageSelector' id='pageSelect' class='page-select'>
    {{#each products.prodPag.arrPages}}
      <option value='{{this}}'>{{this}}</option>
    {{/each}}
  </select>
  {{#if products.prodPag.hasNextPage}}
    <a href={{products.prodPag.nextLink}}><ion-icon name='chevron-forward-outline'></ion-icon></a>
  {{/if}}
</div>
<a href='{{url}}'>Go back to dashboard</a>
